<img id="stickman" src="/stickman.png" alt="Stickman grabbing" class="absolute top-110 left-40 cursor-pointer">

<style>
  .stick-fall {
    animation: stick-fall-animation 5s steps(25) forwards;
  }

  @keyframes stick-fall-animation {
    100% {
      top: 2000px;
      opacity: 0;
      transform: rotate(3600deg);
    }
  }
</style>

<script>
  const stickman = document.querySelector('#stickman') as HTMLImageElement
  const armFrames = ["/stickman-arms-up.png", "/stickman-arms-down.png"]
  let currentFrame = 0

  stickman.addEventListener('click', () => {
    stickman.classList.add('stick-fall')
    setInterval(() => {
      stickman.src = armFrames[currentFrame]
      currentFrame = currentFrame === 0 ? 1 : 0
    }, 200)
  })
</script>